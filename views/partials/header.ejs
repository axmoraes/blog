    <body>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top" style="background-color: #3527B3">
                <a class="navbar-brand d-block d-md-none" href="/">
                    <i class="desktop icon"><strong> BLOG</strong></i>
                </a>
            <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navCollapse" aria-controls="navCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span id="toggler" class="navbar-toggler-icon"></span>
            </button>
            <div  class="collapse navbar-collapse justify-content-start col-sm" id="navCollapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link navLinks" href="/blogs/new">New Post</a>
                    </li>
                </ul>
            </div>
            <div  class="collapse navbar-collapse col-" id="navCollapse">
                    <ul class="navbar-nav">
                        <li class="">
                            <a class="navbar-brand d-none d-sm-block" style="text-align: center" href="/">
                                <i class="desktop icon"><strong> BLOG</strong></i>
                            </a>
                        </li>
                    </ul>
                </div>
            <div  class="collapse navbar-collapse justify-content-end col-sm" id="navCollapse">
                <ul class="navbar-nav ml-auto">
                    <% if(!currentUser){ %>
                        <li class="nav-item">
                            <a class="nav-link navLinks" href="/login">Login</a>
                        </li>
                        <li>
                            <a class="nav-link navLinks" href="/register">Register</a>
                        </li>
                    <% } else { %>
                        <li>
                            <a class="nav-link navLinks" href="#">Signed in as <%= currentUser.firstName %></a>
                        </li>
                        <li>
                            <a class="nav-link navLinks" href="/logout">Logout</a>     
                        </li>
                    <% } %>                   
                </ul>
            </div>
        </nav>


