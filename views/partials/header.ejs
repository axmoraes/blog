<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="shortcut icon" href="/images/favicon.ico " />
        <title>Blog App</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href = "https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.3/semantic.min.css">
        <link rel="stylesheet" type="text/css" href = "/stylesheets/app.css">
        <link href="https://fonts.googleapis.com/css?family=Oxygen|Ubuntu|Amatic+SC|Cinzel" rel="stylesheet">

    </head>
    <body>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top" style="background-color: #3527B3">
                <a class="navbar-brand d-block d-md-none" href="/">
                    <img id="home" src="/images/logo.png"></img>
                </a>
            <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navCollapse" aria-controls="navCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span id="toggler" class="navbar-toggler-icon"></span>
            </button>
            <div  class="collapse navbar-collapse justify-content-start col-sm-4" id="navCollapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link navLinks" href="/"><strong>Home</strong></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link navLinks" href="/blogs/new"><strong>New Post</strong></a>
                    </li>
                </ul>
            </div>
            <div class="col-sm-4 d-none d-md-block" style="text-align: center">
                <a href="/">
                    <img id="home" src="/images/logo.png"></img>
                </a>
            </div>
            <div  class="collapse navbar-collapse justify-content-end col-sm-4" id="navCollapse">
                <ul class="navbar-nav ml-auto">
                    <% if(!currentUser){ %>
                        <li class="nav-item">
                            <a class="nav-link navLinks" href="/login"><strong>Login</strong></a>
                        </li>
                        <li>
                            <a class="nav-link navLinks" href="/register"><strong>Register</strong></a>
                        </li>
                    <% } else { %>
                        <li>
                            <a class="nav-link navLinks" href="#">Signed in as <%= currentUser.firstName %></a>
                        </li>
                        <li>
                            <a class="nav-link navLinks" href="/logout">Logout</a>     
                        </li>
                    <% } %>                   
                </ul>
            </div>
        </nav>
        
        <div class="container">
            <% if(error && error.length > 0) { %>
              <div class="alert alert-danger" role="alert"><p><%=error %></p></div>
            <% } %>
            
            <% if(success && success.length > 0) { %>
              <div class="alert alert-info" role="alert"><p><%= success %></p></div>
            <% } %>
        </div>