<h1>Login</h1>

<div class="box">
    <form action="/login" method="POST">
        <div>
            <input type="text" name="blog[userName]" required>
            <label>Username</label>
        </div>
        <div>
            <input type="password" name="blog[password]" required>
            <label>Password</label>
        </div>
        <a href="/register">Not register yet? Register now</a>
        <br>
        <br>
        <input class="ui violet button" type="submit">
    </form>
</div>

